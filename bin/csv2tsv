#!/usr/bin/env perl
use warnings;
use strict;

use Text::CSV;

my $csv = Text::CSV->new({ binary => 1 });
while (<>) {
    s{\R\z}{};
    $csv->parse($_);
    print(join("\t", map { trim_normalize($_) } $csv->fields), "\n");
}

sub trim_normalize {
    my ($string) = @_;
    $string =~ s{[\t\r\n]}{ }g;
    return $string;
}
